<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ytempest.lovebezierdemo.MainActivity">

    <com.ytempest.widget.ThumbUpLayout
        android:id="@+id/thump_up_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="#ccf0d0"
        app:diffuseHeight="@dimen/diffuseHeight"
        app:diffuseWidth="@dimen/diffuseWidth">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:onClick="onClick"
            android:text="点赞" />

    </com.ytempest.widget.ThumbUpLayout>

</RelativeLayout>
