<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BannerView的自定义属性集 -->
    <declare-styleable name="BannerView">
        <!-- 点的选中的颜色值 -->
        <attr name="dotSelectColor" format="color|reference" />
        <!-- 点的默认的颜色值 -->
        <attr name="dotNormalColor" format="color|reference" />
        <!-- 点的大小 -->
        <attr name="dotSize" format="dimension" />
        <!-- 点的间距 -->
        <attr name="dotDistance" format="dimension" />
        <!-- 点的位置 -->
        <attr name="dotGravity" format="enum">
            <enum name="center" value="0" />
            <enum name="right" value="1" />
            <enum name="left" value="-1" />
        </attr>
        <!-- 底部的颜色 -->
        <attr name="bottomColor" format="color" />
        <!-- 定义宽高比 -->
        <attr name="widthProportion" format="float" />
        <attr name="heightProportion" format="float" />
        <!-- 底部文字颜色 -->
        <attr name="bannerTextColor" format="color" />
        <!-- 底部文字大小 -->
        <attr name="bannerTextSize" format="dimension" />
    </declare-styleable>

    <!-- 自定义密码输入框的属性 -->
    <declare-styleable name="PasswordEditText">
        <!-- 密码框的边框大小 -->
        <attr name="frameSize" format="dimension|reference" />
        <!-- 密码框的边框颜色 -->
        <attr name="frameColor" format="dimension|reference" />
        <!-- 密码框的圆角的弧度 -->
        <attr name="frameCorner" format="dimension|reference" />
        <!-- 密码框分割线的大小 -->
        <attr name="divisionSize" format="dimension|reference" />
        <!-- 密码框分割线的颜色 -->
        <attr name="divisionColor" format="dimension|reference" />
        <!-- 密码圆点的半径 -->
        <attr name="pointRadius" format="dimension|reference" />
        <!-- 密码圆点的颜色 -->
        <attr name="pointColor" format="color|reference" />
        <!-- 密码的位数 -->
        <attr name="passwordCount" format="integer|reference" />
    </declare-styleable>


    <!-- BinderButton的自定义属性集 -->
    <declare-styleable name="ModifiableButton">
        <attr name="disable_text_color" format="color" />
        <attr name="disable_bg" format="reference" />
    </declare-styleable>


</resources>