<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"

    android:orientation="vertical"
    tools:context="com.ytempest.studentmanage.fragment.PersonalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp">

        <com.ytempest.framelibrary.view.CircleImageView

            android:id="@+id/iv_head"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/personal_fragment_default_head"
            app:border_color="@color/colorPrimary"
            app:border_width="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_account"
                style="@style/personal_fragment_header_text_style"
                android:text="账号：" />

            <TextView
                android:id="@+id/tv_user"
                style="@style/personal_fragment_header_text_style"
                android:text="身份：" />

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_update_password"
        style="@style/fragment_personal_item_list_style"
        android:layout_marginTop="20dp"
        android:text="更改密码"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_night_mode"
        style="@style/fragment_personal_item_list_style"
        android:layout_marginTop="15dp"
        android:text="夜间模式" />

    <TextView
        style="@style/fragment_personal_item_list_style"
        android:layout_marginTop="1dp"
        android:text="检查更新" />

    <TextView
        style="@style/fragment_personal_item_list_style"
        android:layout_marginTop="1dp"
        android:text="帮助与反馈" />

    <TextView
        android:id="@+id/tv_sign_up"
        style="@style/fragment_personal_item_list_style"
        android:layout_marginTop="15dp"
        android:text="退出登录" />

</LinearLayout>
