<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ytempest.studentmanage.activity.UpdatePasswordActivity">

    <LinearLayout
        style="@style/et_input_container_style"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_new_password"
            style="@style/et_input_style"
            android:drawableLeft="@drawable/login_user_password_icon"
            android:hint="请输入新密码"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/cb_new_password_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:button="@drawable/selector_login_password_status"
            android:checked="false" />
    </LinearLayout>

    <LinearLayout
        style="@style/et_input_container_style"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/et_confirm_password"
            style="@style/et_input_style"
            android:drawableLeft="@drawable/login_user_password_icon"
            android:hint="请再输入一次新密码"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/cb_confirm_password_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:button="@drawable/selector_login_password_status"
            android:checked="false" />
    </LinearLayout>


    <com.ytempest.framelibrary.view.button.ModifiableButton
        android:id="@+id/bt_update_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_green_button_bg"
        android:gravity="center"
        android:text="确定修改"
        android:textColor="#FFF"
        android:textSize="20sp"
        app:disable_bg="@drawable/shape_disable_button_bg" />

</LinearLayout>
