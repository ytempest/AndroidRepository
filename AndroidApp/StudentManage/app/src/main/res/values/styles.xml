<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 底部按钮的样式 -->
    <style name="rb_button_style">
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_rb_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 登录页面输入框的外层容器的样式 -->
    <style name="et_input_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/shape_login_et_input_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 登录页面输入框的样式 -->
    <style name="et_input_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">#4e4e4e</item>
        <item name="android:textCursorDrawable">@drawable/shape_base_et_input_cursor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="radio_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#4e4e4e</item>
    </style>


    <!-- PersonalFragment 底部问题的TextView的样式 -->
    <style name="fragment_personal_item_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFF</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/personal_icon_common</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableRight">@drawable/right_arrow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <!-- 个人中心的头部文字样式 -->
    <style name="personal_fragment_header_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 个人信息页面中每一行内容的外层容器 -->
    <style name="common_row_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">#FFF</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 个人信息页面中每一行内容标题，即第一个View -->
    <style name="common_row_title_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textColorHint">#9E9E9E</item>
    </style>

    <!-- 个人信息页面中每一行内容的不可以修改的正文内容 -->
    <style name="user_info_row_content_tv_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#828282</item>
    </style>

    <!-- 个人信息页面中每一行内容的可以修改的正文内容 -->
    <style name="common_row_content_et_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">right</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">#9E9E9E</item>
    </style>

    <!-- 个人信息页面中每一行内容右箭头 -->
    <style name="common_row_right_arrow_iv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:src">@drawable/right_arrow</item>
    </style>


    <style name="dialog_choose_photo_root_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">bottom</item>
    </style>


    <style name="dialog_choose_photo_button_style" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_gray_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/dialog_choose_photo_button_text</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
